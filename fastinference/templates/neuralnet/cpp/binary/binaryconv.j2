{#
 # Binary Convolution
 #}

// Layer {{ layer_id }}: Conv
{% if pads == [0, 0, 0, 0] %}
for (int h = 0; h < {{ output_shape[2] }}; h++) {
  for (int w = 0; w < {{ output_shape[3] }}; w++) {
    for (int m = 0; m < {{ output_shape[1] }}; m++) {
      layer_{{ layer_id }}_output[h][w][m] = layer_{{ layer_id }}_bias[m];
    }
    for (int kH = 0; kH < {{ kernel_shape[2] }}; kH++) {
      for (int kW = 0; kW < {{ kernel_shape[3] }}; kW++) {
        for (int m = 0; m < {{ output_shape[1] }}; m++) {
          for (int c = 0; c < {{ (input_shape[1] / backend.binary_word_size)|round(method='ceil')|int }}; c++) {
            layer_{{ layer_id }}_output[h][w][m] += 2 * {{ backend.popcount }}(({{ backend.data_types['binary'] }})~({{ backend.data_types['binary'] }})(layer_{{ layer_id }}_weight[kH][kW][m][c] ^ layer_{{ layer_id - 1 }}_output[h * {{ strides[0] }} + kH - {{ pads[0] }}][w * {{ strides[1] }} + kW - {{ pads[1] }}][c])) - {{ backend.binary_word_size }};
          }
        }
      }
    }
  }
}
{% else %}
for (int h = 0; h < {{ output_shape[2] }}; h++) {
  for (int w = 0; w < {{ output_shape[3] }}; w++) {
    for (int m = 0; m < {{ output_shape[1] }}; m++) {
      layer_{{ layer_id }}_output[h][w][m] = layer_{{ layer_id }}_bias[m];
    }
    for (int kH = 0; kH < {{ kernel_shape[2] }}; kH++) {
      int iH = h * {{ strides[0] }} + kH - {{ pads[0] }};
      if (iH >= 0 && iH < {{ input_shape[2] }}) {
        for (int kW = 0; kW < {{ kernel_shape[3] }}; kW++) {
          int iW = w * {{ strides[1] }} + kW - {{ pads[1] }};
          if (iW >= 0 && iW < {{ input_shape[3] }}) {
            for (int m = 0; m < {{ output_shape[1] }}; m++) {
              for (int c = 0; c < {{ (input_shape[1] / backend.binary_word_size)|round(method='ceil')|int }}; c++) {
                layer_{{ layer_id }}_output[h][w][m] += 2 * {{ backend.popcount }}(({{ backend.data_types['binary'] }})~({{ backend.data_types['binary'] }})(layer_{{ layer_id }}_weight[kH][kW][m][c] ^ layer_{{ layer_id - 1 }}_output[iH][iW][c])) - {{ backend.binary_word_size }};
              }
            }
          }
        }
      }
    }
  }
}
{% endif %}
