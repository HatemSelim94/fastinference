{#
 # Binary Maximum Pooling
 #}

// Layer {{ layer_id }}: MaxPool
{% if pads == [0, 0, 0, 0] %}
for (int h = 0; h < {{ output_shape[2] }}; h++) {
  for (int w = 0; w < {{ output_shape[3] }}; w++) {
    for (int c = 0; c < {{ (input_shape[1] / backend.binary_word_size)|round(method='ceil')|int }}; c++) {
      layer_{{ layer_id }}_output[h][w][c] = 0;
    }
    for (int kH = 0; kH < {{ kernel_shape[0] }}; kH++) {
      for (int kW = 0; kW < {{ kernel_shape[1] }}; kW++) {
        for (int c = 0; c < {{ output_shape[1] // backend.binary_word_size }}; c++) {
          layer_{{ layer_id }}_output[h][w][c] |= layer_{{ layer_id - 1 }}_output[h * {{ strides[0] }} + kH][w * {{ strides[1] }} + kW][c];
        }
      }
    }
  }
}
{% else %}
for (int h = 0; h < {{ output_shape[2] }}; h++) {
  for (int w = 0; w < {{ output_shape[3] }}; w++) {
    for (int c = 0; c < {{ (output_shape[1] / backend.binary_word_size)|round(method='ceil')|int }}; c++) {
      layer_{{ layer_id }}_output[h][w][c] = 0;
    }
    for (int kH = 0; kH < {{ kernel_shape[0] }}; kH++) {
      int iH = h * {{ strides[0] }} + kH - {{ pads[0] }};
      if (iH >= 0 && iH < {{ input_shape[2] }}) {
        for (int kW = 0; kW < {{ kernel_shape[1] }}; kW++) {
          int iW = w * {{ strides[1] }} + kW - {{ pads[1] }};
          if (iW >= 0 && iW < {{ input_shape[3] }}) {
            for (int c = 0; c < {{ (output_shape[1] / backend.binary_word_size)|round(method='ceil')|int }}; c++) {
              layer_{{ layer_id }}_output[h][w][c] |= layer_{{ layer_id - 1 }}_output[iH][iW][c];
            }
          }
        }
      }
    }
  }
}
{% endif %}
